@model GestaoTarefasIPG.Models.Cargo

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar Cargo</h1>

<h3>Are you sure you want to delete this cargo?</h3>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NomeCargo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomeCargo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NivelCargo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NivelCargo)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CargoID" />
        <div>
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>

    </form>
</div>
