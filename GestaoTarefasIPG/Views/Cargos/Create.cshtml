@model GestaoTarefasIPG.Models.Cargo

@{
    ViewData["Title"] = "Criar Cargo";
}

<h4>Crie o Cargo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomeCargo" class="control-label"></label>
                <input asp-for="NomeCargo" class="form-control" />
                <span asp-validation-for="NomeCargo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NivelCargo" class="control-label"></label>
                <input asp-for="NivelCargo" class="form-control" />
                <span asp-validation-for="NivelCargo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar Cargo" class="btn btn-info" />|
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>